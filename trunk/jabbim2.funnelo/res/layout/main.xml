<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="3dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:layout_centerHorizontal="true"
    >
	<Spinner android:id="@+id/status"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"/>
	<Gallery android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/grouplist" android:background="#000000"></Gallery>
	<LinearLayout android:id="@+id/tabContacts"
				android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:orientation="vertical"
    			android:padding="0dip"
    >
    <ListView android:id="@+id/contactList"
    				android:layout_width="fill_parent"
    				android:layout_height="fill_parent" android:clickable="true" android:longClickable="true" android:textFilterEnabled="true" android:background="#000000"></ListView>
	
   </LinearLayout>



</LinearLayout>